<% include ../partials/header.ejs %>

<h1><%= title %></h1>

<% if (user) { %>
    <a href="/products/add" class="btn btn-info">Add a New Product</a>
<% } else { %>
    <a href="/login" class="btn btn-info">Add a New Product</a>
<% } %>

<table class="table table-striped table-hover">
    <tr><th>Name</th><th>Condition</th><th>Price</th><th>Year</th><th>Actions</th>
    </tr>

    <% for (var i = 0; i < products.length; i++) { %>

            <tr>
                <td><%= products[i].name %></td>
                <td><%= products[i].condition %></td>
                <td><%= products[i].price %></td>
                <td><%= products[i].year %></td>
                <td>
                    <a href="/products/buy/<%= products[i]._id %>" class="btn btn-success">Buy</a>
                </td>
            </tr>

        <% } %>

</table>

<% include ../partials/footer.ejs %>