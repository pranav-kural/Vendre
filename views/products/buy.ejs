<% include ../partials/header.ejs %>

<main class="container">

<h1>Product Details: </h1>

<table class="table table-striped table-hover">
<tr>
    <th>Product Name:</th>
    <th>Product Condition:</th>
    <th>Year of make:</th>
     <th>Price:</th>
</tr>
<tr>
    <td><%= product.name %></td>
    <td><%= product.condition %></td>
    <td><%= product.year %></td>
    <td><%= product.price %></td>
</tr>
</table>

<h2>Contact the Seller to buy the product:</h2>

<form method="post">
    <div class="form-group">
        <label for="name" class="col-sm-2 control-label">Your Name: *</label>
        <input name="name" id="name" required />
    </div>
    <div class="form-group">
        <label for="email" class="col-sm-2 control-label">Your email: *</label>
        <input name="email" id="email" type="email" required />
    </div>
    <div class="form-group">
        <label for="phone" class="col-sm-2 control-label">Your contact number:</label>
        <input name="phone" id="phone" min="0.01" type="number" step="any" />
    </div>
    <div class="form-group">
        <label for="message" class="col-sm-2 control-label">Message:</label>
        <textarea rows="5" cols="50" name="message"></textarea>
    </div>
    <input type="hidden" name="product_id" value="<%= product._id %>">
    <input type="hidden" name="seller_id" value="<%= product.seller %>">
    <button class="btn btn-success col-sm-offset-2">Contact Seller</button>
</form>

</main>

<% include ../partials/footer.ejs %>