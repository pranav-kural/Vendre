<% include ../partials/header.ejs %>

<main class="container">

<h1>Product Details</h1>

<form method="post">
    <div class="form-group">
        <label for="name" class="col-sm-2 control-label">Name: *</label>
        <input name="name" id="name" required value="<%= product.name %>" />
    </div>
    <div class="form-group">
        <label for="condition" class="col-sm-2 control-label">Condition: *</label>
        <input name="condition" id="condition" required value="<%= product.condition %>" />
    </div>
    <div class="form-group">
        <label for="price" class="col-sm-2 control-label">Price:</label>
        <input name="price" id="price" min="0.01" type="number" step="any" value="<%= product.price %>"  />
    </div>
    <div class="form-group">
        <label for="year" class="col-sm-2 control-label">Year:</label>
        <input name="year" id="year" min="1600" type="number" step="any" value="<%= product.year %>" />
    </div>
    <input name="seller" type="hidden" value='<%= user._id %>'>
    <button class="btn btn-success col-sm-offset-2">Save</button>
</form>

</main>

<% include ../partials/footer.ejs %>