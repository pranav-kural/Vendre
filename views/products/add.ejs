<% include ../partials/header.ejs %>

<main class="container">

  <h1>Add a new Product</h1>
  <h2>Product Details</h2>

  <form method="post">
    <div class="form-group">
      <label for="name" class="col-sm-2 control-label">Name: *</label>
      <input name="name" id="name" required />
    </div>
    <div class="form-group">
      <label for="condition" class="col-sm-2 control-label">Condition: *</label>
      <input name="condition" id="condition" required />
    </div>
    <div class="form-group">
      <label for="price" class="col-sm-2 control-label">Price:</label>
      <input name="price" id="price" min="0.01" type="number" step="any"  />
    </div>
    <div class="form-group">
      <label for="year" class="col-sm-2 control-label">Year:</label>
      <input name="year" id="year" min="1600" type="number" step="any" />
    </div>
    <input name="seller" value='<%= user._id %>' type="hidden">
    <button class="btn btn-success col-sm-offset-2">Add Product</button>
  </form>

</main>

<% include ../partials/footer.ejs %>