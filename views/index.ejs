<% include ./partials/header.ejs %>

<main class="container">

<div class="panel panel-default">
    <div class="panel-heading text-center">
        <h1><%= title %></h1>
        <h4>The Modern Classified Store</h4>
     </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
                <img src="/images/vendre_app.jpg" alt="Vendre App" class="img-responsive">
            </div>
            <div class="col-xs-12 col-sm-6 col-md-8 col-lg-8">
                    <div class="col-xs-12 jumbotron" id="homeDescription">
                        <p>
                            A modern classified store that gives you the power to buy and sell stuff with ultimate ease.
                        </p>
                    </div>
                    <div class="col-xs-12 jumbotron">
                                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                                    <div class="row">
                                        <div class="col-xs-12">
                                            <p>Start selling your stuff now</p>
                                        </div>
                                        <div class="col-xs-12">
                                        <% if (user) { %>
                                            <a href="/products/add" class="btn btn-info">SELL NOW</a>
                                        <% } else { %>
                                            <a href="/login" class="btn btn-info">SELL NOW</a>
                                        <% } %>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                                    <div class="row">
                                        <div class="col-xs-12">
                                            <p>Explore awesome stuff to buy</p>
                                        </div>
                                        <div class="col-xs-12">
                                            <a href="/products" class="btn btn-success">EXPLORE</a>
                                        </div>
                                    </div>
                                </div>
                </div>
            </div>
        </div>
    </div>
</div>

</main>

<% include ./partials/footer.ejs %>
