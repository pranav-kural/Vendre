<% include partials/header.ejs %>

<main class="container">
    <h1>Login</h1>

    <% if (messages.length > 0) { %>
        <div class="alert alert-danger"><%= messages %></div>
    <% }
    else { %>
        <div class="alert alert-success">Please enter your Credentials</div>
    <% } %>
    <form method="post">
        <div class="form-group">
            <label for="username" class="col-sm-2 control-label">Email: *</label>
            <input name="username" id="username" required />
        </div>
        <div class="form-group">
            <label for="password" class="col-sm-2 control-label">Password: *</label>
            <input name="password" id="password" type="password" required />
        </div>
        <div class="row">
            <div class="col-xs-12">
                <button class="btn btn-success col-sm-offset-2">Login</button>
            </div>
            <div class="col-xs-12">
                <a href="/facebook"><img src="/images/facebook.png" alt="Login with facebook" style="padding: 5px 0"></a>
            </div>
            <div class="col-xs-12">
                <a href="/google"><img src="/images/google.png" alt="Login with Google+" width="180" style="padding: 5px 0"></a>
            </div>
        </div>
        <hr />
        Need access?  <a href="/register" title="Register">Register</a>
    </form>

</main>

<% include partials/footer.ejs %>